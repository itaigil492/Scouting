<!DOCTYPE html>
<html lang="en">

<head>
    <% include templates/head.ejs %>
</head>

<body>
<!-- START PAGE CONTAINER -->
<div class="page-container">

    <% include templates/sidebar.ejs %>

    <!-- PAGE CONTENT -->
    <div class="page-content">

        <% include templates/xnavigation.ejs%>

        <!-- START BREADCRUMB -->
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Forms Stuff</a></li>
            <li><a href="#">Form Layout</a></li>
            <li class="active">One Column</li>
        </ul>
        <!-- END BREADCRUMB -->

        <!-- PAGE CONTENT WRAPPER -->
        <div class="page-content-wrap">

            <div class="row">
                <div class="col-md-12">

                    <form class="form-horizontal" action="/upload" method="post" id="upload" enctype="multipart/form-data">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Game upload</h3>
                                <ul class="panel-controls">
                                    <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
                                </ul>
                            </div>
                            <div class="panel-body">

                                <div class="form-group">
                                    <label class="col-md-3 col-xs-12 control-label">Game ID</label>
                                    <div class="col-md-6 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                            <input type="text" name="gameid" class="form-control" value="<%= gameId %>"/>
                                        </div>
                                        <span class="help-block">The Game ID - WARNING: only change it if you want to override an old game</span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 col-xs-12 control-label">Comments</label>
                                    <div class="col-md-6 col-xs-12">
                                        <textarea name="comments" class="form-control" rows="3"></textarea>
                                        <span class="help-block">Free comments on game</span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 col-xs-12 control-label">Blue teams</label>
                                    <div class="col-md-6 col-xs-12">
                                        <input name="blueTeam" type="text" class="tagsinput"/>
                                        <span class="help-block">Blue alliance team numbers</span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 col-xs-12 control-label">Red teams</label>
                                    <div class="col-md-6 col-xs-12">
                                        <input name="redTeam" type="text" class="tagsinput"/>
                                        <span class="help-block">Red alliance team numbers</span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 col-xs-12 control-label">Game match type</label>
                                    <div class="col-md-6 col-xs-12">
                                        <select class="form-control select" name="matchType">
                                            <option>Practice</option>
                                            <option>Qualification</option>
                                            <option>Playoffs</option>
                                        </select>
                                        <span class="help-block">The match type</span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 col-xs-12 control-label">Competition</label>
                                    <div class="col-md-6 col-xs-12">
                                        <select class="form-control select" name="competition">
                                            <option>Houston</option>
                                            <option>Nokia</option>
                                            <option>District4</option>
                                            <option>District1</option>
                                        </select>
                                        <span class="help-block">The competition</span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 col-xs-12 control-label">Game video</label>
                                    <div class="col-md-6 col-xs-12">
                                        <input type="file" class="fileinput btn-primary" name="gameVideo" id="gameVideo" title="Browse file"/>
                                        <span class="help-block">The game video file</span>
                                    </div>
                                </div>

                                <!--<div class="form-group">-->
                                    <!--<label class="col-md-3 col-xs-12 control-label">Checkbox</label>-->
                                    <!--<div class="col-md-6 col-xs-12">-->
                                        <!--<label class="check"><input type="checkbox" class="icheckbox" checked="checked"/> Checkbox title</label>-->
                                        <!--<span class="help-block">Checkbox sample, easy to use</span>-->
                                    <!--</div>-->
                                <!--</div>-->

                            </div>
                            <div class="panel-footer">
                                <button class="btn btn-default">Clear Form</button>
                                <button class="btn btn-primary pull-right">Submit</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
        <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTENT -->
</div>
<!-- END PAGE CONTAINER -->

<!-- START PRELOADS -->
<audio id="audio-alert" src="audio/alert.mp3" preload="auto"></audio>
<audio id="audio-fail" src="audio/fail.mp3" preload="auto"></audio>
<!-- END PRELOADS -->

<!-- START SCRIPTS -->
<!-- START PLUGINS -->
<script type="text/javascript" src="js/plugins/jquery/jquery.min.js"></script>
<script type="text/javascript" src="js/plugins/jquery/jquery-ui.min.js"></script>
<script type="text/javascript" src="js/plugins/bootstrap/bootstrap.min.js"></script>
<!-- END PLUGINS -->

<!-- THIS PAGE PLUGINS -->
<script type='text/javascript' src='js/plugins/icheck/icheck.min.js'></script>
<script type="text/javascript" src="js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js"></script>

<script type="text/javascript" src="js/plugins/bootstrap/bootstrap-datepicker.js"></script>
<script type="text/javascript" src="js/plugins/bootstrap/bootstrap-file-input.js"></script>
<script type="text/javascript" src="js/plugins/bootstrap/bootstrap-select.js"></script>
<script type="text/javascript" src="js/plugins/tagsinput/jquery.tagsinput.min.js"></script>
<!-- END THIS PAGE PLUGINS -->

<!-- START TEMPLATE -->
<script type="text/javascript" src="js/settings.js"></script>

<script type="text/javascript" src="js/plugins.js"></script>
<script type="text/javascript" src="js/actions.js"></script>
<!-- END TEMPLATE -->

<script type="text/javascript">
    if(!<%= firstTime %>) {
        if(<%= success %>) {
            alert("The Game Was Successfully Uploaded! :)");
            console.log("The Game Was Successfully Uploaded! :)");
        }
    }
</script>
<!-- END SCRIPTS -->

</body>

</html>
